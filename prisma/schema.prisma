generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(cuid(2))
  slug        String   @unique
  title       String
  summary     String
  highlights  String[] // Postgres supports text[]
  tech        String[] // tags
  repoUrl     String?
  liveUrl     String?
  featured    Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid(2))
  name      String
  category  String   // "Languages" | "Frontend" | ...
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, category])
}

model SocialLink {
  id        String   @id @default(cuid(2))
  label     String   // "GitHub"
  url       String
  iconKey   String?  // "github", "linkedin"
  sortOrder Int      @default(0)
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id            String   @id @default(cuid(2))
  heroHeadline  String
  heroSubline   String?
  primaryCtaText String?
  primaryCtaUrl  String?
  // resumeUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}